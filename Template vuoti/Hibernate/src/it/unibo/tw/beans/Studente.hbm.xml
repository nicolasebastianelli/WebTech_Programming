<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="it.unibo.tw.es3.beans.Studente" table="studenti">
  	<id name="id" column="id">
    	<generator class="increment"/>
    </id>
    <property name="matricola" type="string">
    	 <column name="matricola" length="10"/>
   	</property>
   	<property name="nome" type="string">
    	 <column name="nome" length="50"/>
   	</property>
   	<property name="cognome" type="string">
    	 <column name="cognome" length="50"/>
   	</property>
   	<property name="sesso" type="string">
    	 <column name="sesso" length="1"/>
   	</property>
   	<property name="data_nascita" column="data_nascita"/>
  </class>
</hibernate-mapping>
